<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.rent.ReturnCarController"
      spacing="10" style="-fx-padding: 20;">
    
    <!-- Title -->
    <Label text="Return a Rented Car" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <!-- Main Content -->
    <GridPane hgap="10" vgap="10">
        <!-- Rental Information -->
        <Label text="Rental Information" style="-fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="0"/>
        
        <Label text="Rental ID:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="1" spacing="5">
            <TextField fx:id="rentalIdField" promptText="Enter Rental ID" prefWidth="150"/>
            <Button text="Search" onAction="#searchRental" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        </HBox>
        
        <!-- Customer Information -->
        <Label text="Customer Information" style="-fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="2"/>
        
        <Label text="Customer Name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="customerNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
        
        <!-- Car Information -->
        <Label text="Car Information" style="-fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="4"/>
        
        <Label text="Car Details:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label fx:id="carDetailsLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" style="-fx-font-weight: bold;"/>
        
        <!-- Rental Period -->
        <Label text="Rental Period" style="-fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="6"/>
        
        <Label text="Rental Date:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <Label fx:id="rentalDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        
        <Label text="Scheduled Return:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <Label fx:id="scheduledReturnDateLabel" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
        
        <Label text="Actual Return:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="9" spacing="5">
            <DatePicker fx:id="actualReturnDateField" prefWidth="150"/>
            <Button text="Today" onAction="#calculateCharges" style="-fx-font-size: 12px;"/>
        </HBox>
        
        <!-- Charges -->
        <Label text="Charges" style="-fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="10"/>
        
        <Label text="Daily Rate:" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
        <Label fx:id="dailyRateLabel" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
        
        <Label text="Days Rented:" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
        <Label fx:id="daysRentedLabel" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
        
        <Label text="Late Fee:" GridPane.columnIndex="0" GridPane.rowIndex="13"/>
        <Label fx:id="lateFeeLabel" GridPane.columnIndex="1" GridPane.rowIndex="13" style="-fx-text-fill: #f44336;"/>
        
        <Label text="Damage Fee:" GridPane.columnIndex="0" GridPane.rowIndex="14"/>
        <TextField fx:id="damageFeeField" GridPane.columnIndex="1" GridPane.rowIndex="14" promptText="0.00" prefWidth="100"/>
        
        <Separator GridPane.columnSpan="2" GridPane.rowIndex="15" style="-fx-padding: 5 0;"/>
        
        <Label text="Total Amount Due:" style="-fx-font-weight: bold; -fx-font-size: 14px;" GridPane.columnIndex="0" GridPane.rowIndex="16"/>
        <Label fx:id="totalAmountLabel" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2e7d32;" GridPane.columnIndex="1" GridPane.rowIndex="16"/>
        
        <Label text="Additional Notes:" GridPane.columnIndex="0" GridPane.rowIndex="17"/>
        <TextArea fx:id="notesField" GridPane.columnIndex="1" GridPane.rowIndex="17" prefRowCount="3" prefWidth="200"/>
    </GridPane>
    
    <!-- Action Buttons -->
    <HBox spacing="10" style="-fx-padding: 20 0 10 0;">
        <Button text="Calculate Charges" onAction="#calculateCharges" style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
        <Button text="Process Return" onAction="#processReturn" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
    
    <!-- Damage Report Section (Hidden by default) -->
    <VBox fx:id="damageReportSection" spacing="10" style="-fx-padding: 10; -fx-border-color: #ff9800; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: #fff8e1;">
        <Label text="Damage Report" style="-fx-font-weight: bold; -fx-text-fill: #ff5722; -fx-font-size: 14px;"/>
        
        <CheckBox fx:id="damageCheckbox" text="Report Damage" onAction="#toggleDamageReport"/>
        
        <VBox fx:id="damageDetails" spacing="10" style="-fx-padding: 10 0 0 20;">
            <Label text="Damage Description:"/>
            <TextArea fx:id="damageDescriptionField" promptText="Describe the damage (location, severity, etc.)..." prefRowCount="3"/>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Repair Cost: $"/>
                <TextField fx:id="repairCostField" promptText="0.00" prefWidth="100"/>
            </HBox>
            
            <HBox spacing="10">
                <Button text="Add Photo" onAction="#addDamagePhoto" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                <Label fx:id="photoCountLabel" text="No photos added"/>
            </HBox>
        </VBox>
    </VBox>
</VBox>