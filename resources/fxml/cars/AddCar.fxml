<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.cars.AddCarController">

 
   <content>
      <VBox spacing="15.0" styleClass="form-container">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <Label styleClass="page-title" text="Add New Car">
            <font>
               <Font name="System Bold" size="20.0" />
            </font>
         </Label>
         
         <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
               <ColumnConstraints minWidth="150.0" />
               <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" />
            </columnConstraints>
            
            <Label text="Brand:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="brandField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Model:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="modelField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Year:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Label text="Color:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="colorField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <Label text="Registration Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="registrationField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            
            <Label text="Price Per Day:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            
            <Label text="Fuel Type:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <ComboBox fx:id="fuelTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            
            <Label text="Mileage:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <TextField fx:id="mileageField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            
            <Label text="Availability:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <ComboBox fx:id="availabilityCombo" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
         </GridPane>
         
         <HBox spacing="10.0">
            <Button onAction="#handleAddCar" styleClass="primary-button" text="Add Car" />
            <Button onAction="#handleBack" styleClass="secondary-button" text="Back" />
         </HBox>
         
         <Label fx:id="messageLabel" styleClass="message-label" />
      </VBox>
   </content>
</ScrollPane>
