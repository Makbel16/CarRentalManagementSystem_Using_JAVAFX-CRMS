<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane stylesheets="/css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.cars.DisplayCarsController">
    <children>
        <VBox layoutY="38.0" prefHeight="499.0" prefWidth="974.0" spacing="10" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Text fill="WHITE" style="-fx-font-size: 24;" text="All Cars" />
                <Button onAction="#handleRefresh" style="-fx-padding: 5 15;" text="Refresh" />
            </HBox>
            
            <TableView fx:id="carsTable" editable="true" prefHeight="395.0" prefWidth="681.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="87.33331298828125" text="ID" />
                    <TableColumn fx:id="makeColumn" prefWidth="82.66668701171875" text="Make" />
                    <TableColumn fx:id="modelColumn" prefWidth="85.33331298828125" text="Model" />
                    <TableColumn fx:id="yearColumn" prefWidth="88.666748046875" text="Year" />
                    <TableColumn fx:id="colorColumn" prefWidth="96.66668701171875" text="Color" />
                    <TableColumn fx:id="pricePerDayColumn" prefWidth="98.66668701171875" text="Price/Day" />
                    <TableColumn fx:id="statusColumn" prefWidth="119.3333740234375" text="Status" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>
            
            <HBox spacing="10" style="-fx-padding: 10 0;">
                <Button onAction="#handleAddCar" text="Add New Car" />
                <Button fx:id="editButton" disable="true" onAction="#handleEditCar" text="Edit Selected" />
                <Button fx:id="deleteButton" disable="true" onAction="#handleDeleteCar" style="-fx-text-fill: red;" text="Delete Selected" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
