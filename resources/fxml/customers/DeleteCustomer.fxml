<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.customers.DeleteCustomerController"
      spacing="10" style="-fx-padding: 20;">
    <Label text="Delete Customer" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <VBox spacing="10">
        <Label text="Enter Customer ID:"/>
        <HBox spacing="10">
            <TextField fx:id="customerIdField" promptText="Customer ID"/>
            <Button text="Search" onAction="#handleSearch"/>
        </HBox>
        
        <VBox fx:id="customerDetailsBox" visible="false" spacing="10" style="-fx-padding: 10 0 0 0;">
            <Label text="Customer Details" style="-fx-font-weight: bold;"/>
            <Label fx:id="customerNameLabel"/>
            <Label fx:id="customerContactLabel" wrapText="true"/>
            <Label text="Are you sure you want to delete this customer?" style="-fx-text-fill: red;"/>
            
            <HBox spacing="10">
                <Button fx:id="deleteButton" text="Confirm Delete" onAction="#handleDelete" style="-fx-background-color: #ff4444; -fx-text-fill: white;" disable="true"/>
                <Button text="Cancel" onAction="#handleCancel"/>
            </HBox>
        </VBox>
    </VBox>
</VBox>