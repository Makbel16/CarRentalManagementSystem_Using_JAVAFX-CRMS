<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" fitToHeight="true"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.DashboardController"
            stylesheets="@../../css/style.css">
   
   <content>
      <!-- Background with image EXACTLY like CarMain -->
      <VBox spacing="20.0" styleClass="main-container" 
            style="-fx-background-image: url('images/dashboard-background.jpg');
                   -fx-background-size: cover;
                   -fx-background-position: center;
                   -fx-background-repeat: no-repeat;">
         
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <!-- Refresh Button at Top Right -->
         <HBox alignment="TOP_RIGHT">
            <Button text="ðŸ”„ Refresh Dashboard" 
                    onAction="#handleRefresh"
                    styleClass="dashboard-icon-button refresh-btn" 
                    minWidth="160"
                    minHeight="60"/>
         </HBox>
         
         <!-- Title EXACTLY like CarMain -->
         <Label text="Dashboard Overview" styleClass="car-page-title"
                alignment="CENTER"
                maxWidth="Infinity">
            <font>
               <Font name="System Bold" size="28.0" />
            </font>
         </Label>
         
         <!-- Cards Row EXACTLY like CarMain buttons -->
         <HBox spacing="20" alignment="CENTER" VBox.vgrow="ALWAYS">
            <!-- Renting Cars Card -->
            <Button id="rentingCardBtn"
                    text="Currently Renting" 
                    onAction="#showRentingCars" 
                    styleClass="dashboard-icon-button" 
                    minWidth="160"
                    minHeight="140">
               <graphic>
                  <Label fx:id="rentingCarsLabel" text="0" styleClass="card-stat-label"/>
               </graphic>
            </Button>
            
            <!-- Available Cars Card -->
            <Button id="availableCardBtn"
                    text="Available Cars" 
                    onAction="#showAvailableCars" 
                    styleClass="dashboard-icon-button" 
                    minWidth="160"
                    minHeight="140">
               <graphic>
                  <Label fx:id="availableCarsLabel" text="0" styleClass="card-stat-label"/>
               </graphic>
            </Button>
            
            <!-- Total Earnings Card -->
            <Button id="earningsCardBtn"
                    text="Monthly Revenue" 
                    onAction="#showTotalEarnings" 
                    styleClass="dashboard-icon-button" 
                    minWidth="160"
                    minHeight="140">
               <graphic>
                  <Label fx:id="totalEarningsLabel" text="0" styleClass="card-stat-label"/>
               </graphic>
            </Button>
            
            <!-- Total Customers Card -->
            <Button id="customersCardBtn"
                    text="Total Customers" 
                    onAction="#showCustomers" 
                    styleClass="dashboard-icon-button" 
                    minWidth="160"
                    minHeight="140">
               <graphic>
                  <Label fx:id="totalCustomersLabel" text="0" styleClass="card-stat-label"/>
               </graphic>
            </Button>
         </HBox>
         
         <!-- Details Pane -->
         <VBox fx:id="detailsPane" spacing="10" style="-fx-padding: 20 0 0 0;" VBox.vgrow="ALWAYS">
            <Label text="Details will appear here" 
                   style="-fx-font-size: 14px; -fx-text-fill: white; -fx-alignment: center;"/>
         </VBox>
         
      </VBox>
   </content>
</ScrollPane>