<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.employees.AddEmployeeController"
      spacing="15" 
      style="-fx-padding: 20;"
      stylesheets="@../../css/style.css">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <Label text="Add New Employee" styleClass="page-title">
        <font>
            <Font name="System Bold" size="20" />
        </font>
    </Label>
    
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="120" prefWidth="150" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="200" prefWidth="300" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="35" />
            <RowConstraints minHeight="35" />
            <RowConstraints minHeight="35" />
            <RowConstraints minHeight="35" />
            <RowConstraints minHeight="80" />
            <RowConstraints minHeight="35" />
            <RowConstraints minHeight="35" />
            <RowConstraints minHeight="35" />
        </rowConstraints>
        
        <!-- Row 0: First Name -->
        <Label text="First Name:*" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" 
                   promptText="Enter first name" />
        
        <!-- Row 1: Last Name -->
        <Label text="Last Name:*" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                   promptText="Enter last name" />
        
        <!-- Row 2: Email -->
        <Label text="Email:*" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" 
                   promptText="email@example.com" />
        
        <!-- Row 3: Phone -->
        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                   promptText="(123) 456-7890" />
        
        <!-- Row 4: Address -->
        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextArea fx:id="addressField" 
                  GridPane.columnIndex="1" 
                  GridPane.rowIndex="4"
                  prefRowCount="3"
                  wrapText="true"
                  promptText="Enter address" />
        
        <!-- Row 5: Position -->
        <Label text="Position:*" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <ComboBox fx:id="positionCombo" 
                  GridPane.columnIndex="1" 
                  GridPane.rowIndex="5"
                  prefWidth="200"
                  promptText="Select position" />
        
        <!-- Row 6: Salary -->
        <Label text="Salary:*" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <TextField fx:id="salaryField" 
                      HBox.hgrow="ALWAYS"
                      promptText="e.g., 5000.00" />
        </HBox>
        
        <!-- Row 7: Hire Date -->
        <Label text="Hire Date:*" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <DatePicker fx:id="hireDatePicker" 
                   GridPane.columnIndex="1" 
                   GridPane.rowIndex="7"
                   prefWidth="200" />
    </GridPane>
    
    <!-- Buttons Section -->
    <HBox spacing="15" style="-fx-padding: 25 0 0 0;" alignment="CENTER">
        <Button text="Add Employee" 
                onAction="#handleAddEmployee" 
                styleClass="primary-button"
                defaultButton="true"
                prefWidth="150" />
        
	<Button text="Clear" 
        onAction="#clearFields" 
        styleClass="secondary-button"
        prefWidth="100" />
        
        <Button text="Back" 
                onAction="#handleBack" 
                styleClass="secondary-button"
                prefWidth="100" />
    </HBox>
    
    <!-- Message Label -->
    <Label fx:id="messageLabel" 
           style="-fx-padding: 15 0 0 0; -fx-wrap-text: true; -fx-font-weight: bold;" 
           text="" />
    
    <!-- Required Fields Note -->
    <Label text="* Required fields" 
           style="-fx-padding: 10 0 0 0; -fx-font-size: 12px; -fx-text-fill: #666;" />
</VBox>