<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.employees.DisplayEmployeesController"
      spacing="10" 
      style="-fx-padding: 20;">
    
    <Label text="Employee List" 
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <HBox spacing="10" style="-fx-padding: 10 0 10 0;">
        <Button text="Refresh" 
                onAction="#handleRefresh" 
                styleClass="secondary-button"/>
        <Button text="Add New Employee" 
                onAction="#handleAddEmployee" 
                styleClass="primary-button"/>
    </HBox>
    
    <TableView fx:id="employeesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50">
                <cellValueFactory>
                    <PropertyValueFactory property="employeeId" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="fullName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="email" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120">
                <cellValueFactory>
                    <PropertyValueFactory property="phone" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="positionColumn" text="Position" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="position" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="salaryColumn" text="Salary" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="salary" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="hireDateColumn" text="Hire Date" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="hireDate" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="80">
                <cellValueFactory>
                    <PropertyValueFactory property="status" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>